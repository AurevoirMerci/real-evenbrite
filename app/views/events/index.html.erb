  <body>

<center>
<section>

<main role="main" class="container">
  

      <div class="my-10 p-10 bg-white rounded box-shadow">


      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Wassup boss?</h1>
          <p>Hi buddy! What if it was time to create an event? Let's have fun dude!</p>
          <p><a class="btn btn-primary btn-lg" href="<%= new_event_path %>" role="button">Create an event &raquo;</a></p>
        </div>
      </div>

      <div class="container">
        <!-- Example row of columns -->
        <div class="row">

           <h6 class="border-bottom border-gray pb-2 m-50">Events around you buddy</h6>
          <% @events.each do |e| %>
          <div class="media text-muted pt-150">
          <p class="media-body pb-2 mb-0 small lh-125 border-bottom border-gray">




            <strong class="d-block text-gray-dark"><%= e.title %> , <%= e.location %></strong>
          <a class="btn btn-primary" href="<%= event_path(e.id) %>" role="button">Details</a></p>
          <% end %>

        <hr>

      </div> <!-- /container -->
    </div>
    </main>

  </div>
</div>
</main>
</section>
