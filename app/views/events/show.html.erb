<center>


    <% if current_user == @g.admin %>
    <p> <a class="btn btn-success" href="<%= event_participations_path(@g.id) %>" role="button">Info about that shit</a></p>
    <% end %>


<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><U><h2>Evénement n° <%=@g.id%> </h2></U></li>
    <li class="list-group-item"><h5>DATE DE CRÉATION : </h5><%=  @g.created_at   %></li>
    <li class="list-group-item"><h5>Title :</h5><%=  @g.title   %> </li>
    <li class="list-group-item"><h5>Description : </h5><%=  @g.description   %></li>
    <li class="list-group-item"><h5>Price : </h5> <%=  @g.price %>€</li>
    <li class="list-group-item"><h5>Location : </h5> <%=  @g.location   %></li>
    <li class="list-group-item"><h5>Duration : </h5> <%=  @g.duration   %></li>
    <li class="list-group-item"><h5>Creator : </h5> <%=  @users.email  %></li>
    <li class="list-group-item"><h5>Participants : </h5> <%=  @attendances.count  %></li>


        <% if user_signed_in? %>

            
            <% if current_user.id == @g.admin.id || current_user.id == @e.participant.id %>

            <% elsif current_user.id != @g.admin.id && current_user.id != @e.participant.id %>

            <p><a class="btn btn-primary" href="<%= new_event_participation_path(@e.id) %>" role="button">Join!</a></p>

            <% end %> 
            
        <% else %>

        <p> <a class="btn btn-primary" href="<%= new_user_session_path %>" role="button">Join!</a></p>

        <% end %>
       
  </ul>
</div>
</center>